<resources>
    <!-- Base application theme. -->
    <style name="NoactionBar" parent="android:Theme.Holo.Light.NoActionBar">
    </style>
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">

        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarSplitStyle">@style/SplitActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/ActionBartabtext</item>
        <item name="android:actionMenuTextColor">#fffffeff</item>
        <item name="android:actionBarTabBarStyle">@style/TabStyle</item>
    </style>
    <style name="TabStyle">
        <item name="android:background">#525557</item>
    </style>
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#ff2b6e98</item>
        <item name="android:titleTextStyle">@style/TitleTextStyle</item>
        <item name="android:actionMenuTextColor">#ffffff</item>
    </style>
    <style name="TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="ActionBartabtext">
       <item name="android:textColor">#fffffeff</item>
    </style>
    <style name="SplitActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
       <item name="android:backgroundSplit">#525557</item>
    </style>
    <style name="Page">
        <item name="android:background">#ffffff</item>
    </style>
    <style name="Section">
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>

    </style>
    <style name="SectionHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">#F5AF27</item>
    </style>
    <style name="Form">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:maxWidth">300dp</item>
        <item name="android:background">#ffffff</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="Input">
        <item name="android:paddingTop">25dp</item>
        <item name="android:height">15dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">#ff453939</item>
    </style>
    <style name="InputHead">
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingLeft">10dp</item>
         <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#525150</item>
    </style>
    <style name="ListItem">
        <item name="android:padding">10dp</item>
        <item name="android:background">#ffffff</item>
    </style>
    <style name="ListItemHead">
    <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ff455353</item>
    </style>
    <style name="ListItemText">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">11dp</item>
        <item name="android:textColor">#ff455353</item>
    </style>
    <style name="DashboardText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
    </style>


</resources>
