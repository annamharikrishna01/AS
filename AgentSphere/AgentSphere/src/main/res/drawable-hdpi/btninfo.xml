<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <stroke android:width="1dip" android:color="#ff71b5cb" />
            <gradient  android:angle="-90"   android:startColor="#ff24a4cb" android:endColor="#ffacdbd8"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >

            <stroke android:width="1dip" android:color="#ff24a4cb" />
            <solid  android:color="#ff71b5cb"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >

            <stroke android:width="1dip" android:color="#ff24a4cb" />
            <gradient  android:angle="-90"  android:startColor="#ffacdbd8" android:endColor="#ff24a4cb" />
        </shape>
    </item>
</selector>