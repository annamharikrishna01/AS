<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
        <item android:state_pressed="true" >
            <shape android:shape="rectangle"  >
                <corners android:radius="3dip" />
                <stroke android:width="1dip" android:color="#ff70bd2f" />
                <gradient  android:angle="-90"   android:startColor="#ff46a905" android:endColor="#ffacdb7d"  />
            </shape>
        </item>
        <item android:state_focused="true">
            <shape android:shape="rectangle"  >
                <corners android:radius="3dip" />
                <stroke android:width="1dip" android:color="#ff46a905" />
                <solid  android:color="#ff99bd75"/>
            </shape>
        </item>
        <item >
            <shape android:shape="rectangle"  >
                <corners android:radius="3dip" />
                <stroke android:width="1dip" android:color="#ff46a905" />
                <gradient  android:angle="-90"  android:startColor="#ffacdb7d" android:endColor="#ff46a905" />
            </shape>
        </item>
</selector>